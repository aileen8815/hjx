<ehcache>

	<diskStore path="java.io.tmpdir/beetle/hibernate-cache" />

	<defaultCache maxElementsInMemory="100000" eternal="true" overflowToDisk="true" />
	<cache name="org.hibernate.cache.spi.UpdateTimestampsCache" maxElementsInMemory="10000" maxElementsOnDisk="100000"></cache>
	<cache name="org.hibernate.cache.internal.StandardQueryCache" maxElementsInMemory="10000" maxElementsOnDisk="100000"></cache>

	<!-- 全局 -->
	<cache name="globalCache" maxElementsInMemory="50000" maxElementsOnDisk="100000" eternal="true" overflowToDisk="true" />
	<!-- 保留一天 -->
	<cache name="dailyCache" maxElementsInMemory="50000" timeToIdleSeconds="86400" timeToLiveSeconds="86400" />
	<!-- 临时Cache，保存一小时 -->
	<cache name="temporaryCache" maxElementsInMemory="50000" timeToIdleSeconds="3600" timeToLiveSeconds="3600" />
